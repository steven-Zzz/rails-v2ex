<div id="header-bar">
  <div class="container">
    <div class="row">
      <div class="col-md-4" style="padding-top: 5px">
        <%= name %>
      </div>
      <% if current_user %>
          <div class="col-md-8 text-right">
          <img src="<%= current_user.avatar_url %>" width="14"/> <%= current_user.username %>
            <%= link_to('Logout', destroy_user_session_path, method: :delete, :style => 'color:#e0e0e0') %>
            <%= link_to('Register', new_user_registration_path, :style => 'color:#e0e0e0') %>
          </div>
      <% end %>
    </div>
  </div>
</div>